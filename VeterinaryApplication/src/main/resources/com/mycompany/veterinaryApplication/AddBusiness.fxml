<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>


<Pane prefHeight="800" prefWidth="1200" styleClass="overlay" stylesheets="@style.css"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.veterinaryApplication.controllers.AddBusinessController">
    
    <!-- Layout -->
    <!-- Button for Main Menu Navigation - Top Left -->
      <Button fx:id="btnBack" layoutX="25" layoutY="25" onAction="#goBack" prefHeight="30" prefWidth="200" text="Go Back to Main Menu" />
      
    <!-- Label for Title of Page - Top Center -->
      <Label fx:id="titleLabel" id="bigTitle" layoutX="475" layoutY="100" text="Placeholder" />
      
    <!-- Label + TextField for Data Entry - Need 4 Total -->
    <!-- Label + TextField for Animal Name -->
      <Label fx:id="businessNameLabel" styleClass="dataLabel" layoutX="230" layoutY="200" text="Name: "/>
      <TextField fx:id="tfBusinessName" layoutX="300" layoutY="200" prefHeight="30" prefWidth="600" promptText="Please Enter Business Name" editable="true" />
      
      <Label fx:id="businessOpenDate" styleClass="dataLabel" layoutX="190" layoutY="275" text="Open Date: "/>
      <DatePicker fx:id="datePicker" layoutX="300" layoutY="275" prefHeight="30" prefWidth="600"  />
      
      <Label fx:id="streetNameLabel" styleClass="dataLabel" layoutX="175" layoutY="350" text="Street Name: "/>
      <TextField fx:id="tfStreetName" layoutX="300" layoutY="350" prefHeight="30" prefWidth="600" promptText="Please Enter Street Name" />
      
      <Label fx:id="postcodeLabel" styleClass="dataLabel" layoutX="200" layoutY="425" text="Postcode: "/>
      <TextField fx:id="tfPostcode" layoutX="300" layoutY="425" prefHeight="30" prefWidth="600" promptText="Please Enter Postcode" />
      
      <Label fx:id="cityLabel" styleClass="dataLabel" layoutX="250" layoutY="500" text="City: "/>
      <TextField fx:id="tfCity" layoutX="300" layoutY="500" prefHeight="30" prefWidth="600" promptText="Please Enter City" />
      
     <!-- Button for Submitting Record -->  
      <Button fx:id="btnSubmit" layoutX="350" layoutY="650" onAction="#onSubmit" prefHeight="75" prefWidth="500" text="Submit" />
    
</Pane>