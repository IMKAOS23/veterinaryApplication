<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.Pane?>

<Pane prefHeight="500" prefWidth="800" styleClass="overlay" stylesheets="@style.css"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.veterinaryApplication.controllers.AddAnimalController">
    
    <!-- Layout -->
    <!-- Button for Main Menu Navigation - Top Left -->
      <Button fx:id="btnClose" layoutX="25" layoutY="25" onAction="#closeDialog" prefHeight="30" prefWidth="200" text="Close" />
      
    <!-- Label for Title of Page - Top Center -->
      <Label fx:id="titleLabel" styleClass="dataLabel" layoutX="275" layoutY="30" />
      
    <!-- Label + TextField for Data Entry - Need 4 Total (See HousePet.java) -->
    <!-- Label + TextField for Animal Name -->
      <Label fx:id="petNameLabel" styleClass="dataLabel" layoutX="25" layoutY="100" text="Name: "/>
      <TextField fx:id="tfPetName" layoutX="115" layoutY="100" prefHeight="30" prefWidth="650" promptText="Please Enter Animal Name" />
     
    <!-- Label + TextField for Animal Age  -->
      <Label fx:id="petAgeLabel" styleClass="dataLabel" layoutX="25" layoutY="175" text="Age: "/>
      <TextField fx:id="tfPetAge" layoutX="115" layoutY="175" prefHeight="30" prefWidth="650" promptText="Please Enter Animal Age" />
    
    <!-- Label + TextField for Animal Colour -->  
      <Label fx:id="petColourLabel" styleClass="dataLabel" layoutX="25" layoutY="250" text="Colour: "/>
      <TextField fx:id="tfPetColour" layoutX="115" layoutY="250" prefHeight="30" prefWidth="650" promptText="Please Enter Animal Colour" />
    
    <!-- Label + TextField for Animal Species -->  
      <Label fx:id="petSpeciesLabel" styleClass="dataLabel" layoutX="25" layoutY="325" text="Species: "/>
      <TextField fx:id="tfPetSpecies" layoutX="115" layoutY="325" prefHeight="30" prefWidth="650" promptText="Please Enter Animal Species" />
      
    <!-- Selector - Dynamically Filled with Correct type of Owners for each animal type -->
      <Label fx:id="ownerSelect" styleClass="dataLabel" layoutX="25" layoutY="400" text="Owner: "/>
      <ComboBox fx:id="selector" layoutX="115" layoutY="400" prefHeight="30" prefWidth="650" />
      
    <!-- Button for Submitting Record -->  
      <Button fx:id="btnSubmit" layoutX="275" layoutY="450" onAction="#onSubmit" prefHeight="30" prefWidth="250" text="Submit" />
      
      
      
</Pane>
